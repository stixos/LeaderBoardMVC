@{
    ViewBag.Title = "MOB!";
}

<script src="~/Scripts/knockout-3.4.2.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/KnockoutModels/AchievementsViewModel.js"></script>

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-body">

            <div class="panel panel-primary pre-scrollable" style="max-height: 180px">
                <div class="panel-body" data-bind="with: gameModel">

                    <ul class="nav nav-pills nav-stacked" data-bind="foreach: games">
                        <li data-bind="css: $index() == 0 ? 'active' : ''">
                            <a data-toggle="tab"
                               data-bind="attr: { href: '#gtabs-' + $index() }, text: $data.Name,
                                          click: $parent.fClick "></a>
                        </li>
                    </ul>

                    <div data-bind="foreach: games" class="tab-content">
                        <div data-bind="attr:{ id:'gtabs-'+$index() }"></div>
                    </div>
                </div>
            </div>

            @Html.Partial("_TimeTabs")
        </div>
    </div>
</div>




